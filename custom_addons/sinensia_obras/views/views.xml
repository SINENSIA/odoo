<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="sinensia_obras.list">
      <field name="name">sinensia_obras list</field>
      <field name="model">sinensia_obras.sinensia_obras</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="sinensia_obras.action_window">
      <field name="name">sinensia_obras window</field>
      <field name="res_model">sinensia_obras.sinensia_obras</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="sinensia_obras.action_server">
      <field name="name">sinensia_obras server</field>
      <field name="model_id" ref="model_sinensia_obras_sinensia_obras"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="sinensia_obras" id="sinensia_obras.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="sinensia_obras.menu_1" parent="sinensia_obras.menu_root"/>
    <menuitem name="Menu 2" id="sinensia_obras.menu_2" parent="sinensia_obras.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="sinensia_obras.menu_1_list" parent="sinensia_obras.menu_1"
              action="sinensia_obras.action_window"/>
    <menuitem name="Server to list" id="sinensia_obras" parent="sinensia_obras.menu_2"
              action="sinensia_obras.action_server"/>

  </data>
</odoo>